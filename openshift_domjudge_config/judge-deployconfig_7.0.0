apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
metadata:
  name: judge
  namespace: domjudge
spec:
  selector:
    app: judge
  replicas: 5
  template:
    metadata:
      labels:
        app: judge
    spec:
      containers:
        - env:
          - name: CONTAINER_TIMEZONE
            value: Asia/Taipei
          - name: DAEMON_ID
            value: $RANDOM
          - name: DOMSERVER_BASEURL
            value: http://140.123.104.63:22222/
          - name: JUDGEDAEMON_PASSWORD
            value: yee!
          - name: JUDGEDAEMON_USERNAME
            value: judgehost
          image: ' '
          name: judge
          resources: {}
          securityContext:
            runAsUser
            privileged: true
      restartPolicy: Always
      resources:
        requests:
          cpu: 950m
          memory: 1792Mi
        limits:
          cpu: 950m
          memory: 1792Mi
  test: false
  triggers:
    - type: "ConfigChange" 
    - type: "ImageChange" 
      imageChangeParams:
        automatic: true
        containerNames:
          - judge
        from:
          kind: "ImageStreamTag"
          name: "judge-with-init:7.0.0"
  strategy: 
    type: "Rolling"
  paused: false 
  revisionHistoryLimit: 2 
  minReadySeconds: 0 
